{
  "name": "Pushpin Clipper",
  "description": "Send the contents of the active tab to Pushpin.",
  "version": "0.1",
  "permissions": ["background", "nativeMessaging", "activeTab", "contextMenus", "*://*/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Push to Pushpin"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+A",
        "mac": "Command+Shift+A",
        "chromeos": "Ctrl+Shift+A",
        "linux": "Ctrl+Shift+A"
      }
    }
  },
  "manifest_version": 2
}
