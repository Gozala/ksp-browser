{
  "name": "Xcrpt",
  "description": "Create a shareable excerpt of the current page.",
  "version": "0.1",
  "icons": { "128": "icon-128.png" },
  "permissions": ["activeTab", "contextMenus", "*://*/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Capture an excerpt"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+X"
      }
    }
  },
  "manifest_version": 2
}
