{
  "name": "context",
  "description": "Add context to the web through the Knowledge Server Protocol (KSP).",
  "version": "0.1",
  "icons": { "144": "icon-on.png" },
  "permissions": ["activeTab", "contextMenus", "*://*/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "run_at": "document_start",
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": ["ui.html", "ui.css", "icon-on.svg", "icon-off.svg"],
  "browser_action": {
    "default_title": "Context",
    "default_icon": {
      "144": "icon-on.png"
    }
  },
  "commands": {
    "inspect-links": {
      "suggested_key": {
        "default": "Ctrl+Shift+I",
        "mac": "Command+Shift+I"
      },
      "description": "Inspect links"
    },
    "toggle-panel": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      },
      "description": "Toggles context plane"
    }
  },
  "manifest_version": 2
}
